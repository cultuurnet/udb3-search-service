{
    "name": "cultuurnet/udb3-search-service",
    "description": "Silex application for indexing UDB3 JSON-LD documents and providing a search api.",
    "type": "project",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "Publiq vzw",
            "email": "info@publiq.be"
        }
    ],
    "require": {
        "php": ">=7.1",
        "ext-json": "*",
        "broadway/broadway": "~0.10",
        "cakephp/chronos": "^1.1",
        "crell/api-problem": "^3.2",
        "cultuurnet/auth": "~3.0",
        "cultuurnet/culturefeed-php": "~1.9.2",
        "cultuurnet/udb3-api-guard": "dev-master",
        "cultuurnet/valueobjects": "~3.2",
        "danielstjules/stringy": "~1.9",
        "elasticsearch/elasticsearch": "~5.2",
        "filp/whoops": "^2.5",
        "guzzlehttp/guzzle": "^6.3",
        "guzzlehttp/psr7": "^1.4",
        "hassankhan/config": "^2.1",
        "league/container": "^3.3",
        "league/route": "^4.3",
        "monolog/monolog": "~1.11",
        "ongr/elasticsearch-dsl": "~5.0.1",
        "php-amqplib/php-amqplib": "2.6.*",
        "sentry/sdk": "^2.2",
        "slim/psr7": "^0.5.0",
        "symfony/finder": "~3.2",
        "symfony/yaml": "^4.3",
        "tuupola/cors-middleware": "^1.1",
        "zendframework/zend-httphandlerrunner": "^1.1"
    },
    "require-dev": {
        "escapestudios/symfony2-coding-standard": "~2.9",
        "php-coveralls/php-coveralls": "^2.1",
        "phpstan/phpstan": "^0.12.43",
        "phpunit/phpunit": "^7.5",
        "squizlabs/php_codesniffer": "~2.5.1"
    },
    "autoload": {
        "psr-4": {
            "CultuurNet\\UDB3\\Search\\": "src/",
            "CultuurNet\\UDB3\\SearchService\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CultuurNet\\UDB3\\Search\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        }
    },
    "config": {
        "preferred-install": {
            "cultuurnet/*": "source",
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "scripts": {
            "test": "vendor/bin/phpunit",
            "phpstan": "vendor/bin/phpstan analyse",
            "phpcs": "vendor/bin/phpcs -p",
            "ci": [
                "composer phpstan",
                "composer test",
                "composer phpcs"
            ]
        }
    }
}
